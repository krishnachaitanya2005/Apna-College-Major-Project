<style>
    .search-btn {
        background-color: #fe424d;
        color: #fff;
        border: none;
        padding: 0 1rem 0 1rem;
    }

    .search-btn:hover {
        background-color: #fe424d;
        color: #fff;
    }

    .search-btn i {
        display: inline;
        margin-right: 0.5rem;
    }
    .search-inp {
        border-radius: 25px;
        padding: 0.5rem 3rem 0.5rem 3rem;
        font-size: 1rem;
    }

    /* Additional styling for mobile background */
    @media (max-width: 767px) {
        .navbar-collapse {
            background-color: #f1f1f1; /* Add any background color you want */
        }

        .navbar-nav {
            text-align: center;
            width: 100%;
        }

        .navbar-nav .nav-link {
            display: block;
            width: 100%;
            text-align: center;
            margin: 5px 0;
        }
    }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/listings"><i class="fa-brands fa-airbnb"></i></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <!-- "Explore" link stays inside navbar, visible on all screen sizes -->
            <div class="navbar-nav d-none d-md-flex">
                <a class="nav-link" href="/listings">Explore</a>
            </div>

            <!-- Search form remains at the top on all screen sizes -->
            <div class="navbar-nav ms-auto">
                <form class="d-flex" role="search">
                    <input class="form-control me-2 search-inp" type="search" placeholder="Search destinations" aria-label="Search"/>
                    <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
                </form>
            </div>

            <!-- Navbar links for SignUp, Login, Airbnb your Home -->
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/listings/new">Airbnb your Home</a>
                <% if (!currUser) { %>
                    <a class="nav-link" href="/signup"><b>SignUp</b></a>
                    <a class="nav-link" href="/login"><b>Login</b></a>
                <% } %>
                <% if (currUser) { %>
                    <a class="nav-link" href="/logout"><b>Logout</b></a>
                <% } %>
            </div>
        </div>
    </div>
</nav>
